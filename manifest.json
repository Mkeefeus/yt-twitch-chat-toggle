{
  "manifest_version": 3,
  "name": "YouTube-Twitch Chat Replacer",
  "version": "1.0",
  "description": "Replace YouTube live stream chat with Twitch chat while keeping the stream open",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube-Twitch Chat Replacer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
