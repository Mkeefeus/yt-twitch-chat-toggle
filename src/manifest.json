{
  "manifest_version": 3,
  "name": "Twitch Chat for YouTube",
  "version": "1.0.0",
  "description": "Seamlessly switch between YouTube and Twitch chat while watching YouTube live streams. Per-channel settings with one-click toggling.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitch Chat for YouTube"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "templates/*"
      ],
      "matches": [
        "*://www.youtube.com/*"
      ]
    }
  ]
}
