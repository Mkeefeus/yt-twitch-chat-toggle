{
  "name": "yt-twitch-chat-toggle",
  "version": "0.1.1",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/chrome": "^0.1.6",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "web-ext": "^9.2.0"
  },
  "private": true,
  "scripts": {
    "build:chrome": "bunx --bun vite build --config vite.config.chrome.ts && bunx --bun vite build --config vite.config.content.chrome.ts",
    "build:firefox": "bunx --bun vite build --config vite.config.firefox.ts && bunx --bun vite build --config vite.config.content.firefox.ts",
    "manifest:firefox": "bun run scripts/generate-manifest firefox",
    "manifest:chrome": "bun run scripts/generate-manifest chrome",
    "manifest": "bun run scripts/generate-manifest",
    "type-check": "tsc -b",
    "format": "bunx --bun prettier --write .",
    "build": "bun run type-check && bun run format && bun run build:chrome && bun run build:firefox && bun run manifest",
    "_sf": "web-ext sign --source-dir=dist/firefox --api-key=$JWT_ISSUER --api-secret=$JWT_SECRET --channel=unlisted",
    "sign:firefox": "dotenv -- bun run _sf",
    "_sfp": "web-ext sign --source-dir=dist/firefox --api-key=$JWT_ISSUER --api-secret=$JWT_SECRET --channel=listed --amo-metadata=./firefox-metadata.json",
    "sign:firefox:public": "dotenv -- bun run _sfp"
  },
  "type": "module"
}
