{
    "manifest_version": 3,
    "name": "Twitch Chat for YouTube",
    "version": "1.0.0",
    "description": "Integrate Twitch chat into YouTube live streams.",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://www.twitch.tv/*"
    ],
    "default_locale": "en_US",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}